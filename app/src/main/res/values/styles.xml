<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Isaac" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_isaac</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Isaac</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Isaac</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Isaac</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Isaac</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Isaac</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_isaac</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_isaac</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Isaac</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Isaac.Widget</item>

    </style>

    <style name="ActionBar.Solid.Isaac" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_isaac</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_isaac</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_isaac</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Isaac</item>
    </style>

    <style name="ActionBar.Transparent.Isaac" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_isaac</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Isaac</item>
    </style>

    <style name="PopupMenu.Isaac" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_isaac</item>
    </style>

    <style name="DropDownListView.Isaac" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_isaac</item>
    </style>

    <style name="ActionBarTabStyle.Isaac" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_isaac</item>
    </style>

    <style name="DropDownNav.Isaac" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_isaac</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_isaac</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_isaac</item>
    </style>

    <style name="ProgressBar.Isaac" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_isaac</item>
    </style>

    <style name="ActionButton.CloseMode.Isaac" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_isaac</item>
    </style>
    <style name="ProgressHUD" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Isaac.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Isaac</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Isaac</item>
    </style>
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
